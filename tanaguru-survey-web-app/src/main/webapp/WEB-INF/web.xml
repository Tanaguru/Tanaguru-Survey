<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
    xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
        http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <!-- context param configuration that locates spring security configuration
    file and the main spring context configuration file -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            /WEB-INF/conf/tanaguru-survey-service.xml
        </param-value>
    </context-param>

    <!-- listener classes -->
    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>
    <listener>
        <listener-class>
            org.springframework.web.context.request.RequestContextListener
        </listener-class>
    </listener>
    <!-- This listener is set to access properties from the jsp-->
    <listener>
        <listener-class>
            org.opens.tgol.util.webapp.ConfigPropertiesExposerListener
        </listener-class>
    </listener>

    <!-- servlet dispatcher declaration -->
    <servlet>
        <servlet-name>tanaguru-survey-web-app</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- encoding filter declaration -->
    <filter>
        <filter-name>encoding-filter</filter-name>
        <filter-class>
            org.springframework.web.filter.CharacterEncodingFilter
        </filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <param-name>forceEncoding</param-name>
        <param-value>true</param-value>
    </filter>
    <!-- filter mapping that applies the encoding filter to all urls -->
    <filter-mapping>
        <filter-name>encoding-filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>openEntityManagerInViewFilter1</filter-name>
        <filter-class>
            org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter
        </filter-class>
        <init-param>
            <param-name>entityManagerFactoryBeanName</param-name>
            <param-value>entityManagerFactory</param-value>
        </init-param>
    </filter>

    <!-- servlet mapping declaration -->
    <servlet-mapping>
        <servlet-name>tanaguru-survey-web-app</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tanaguru-survey-web-app</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>

<!--    <servlet-mapping>
        <servlet-name>tgol-web-app</servlet-name>
        <url-pattern>/dispatch.html</url-pattern>
    </servlet-mapping>-->

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- session timeout configuration : set to 30 min as default -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>